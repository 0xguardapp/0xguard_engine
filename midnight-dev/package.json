{
  "name": "@0xguard/midnight-dev",
  "version": "1.0.0",
  "description": "Midnight Network development environment for ZK proof generation",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "devnet:init": "./scripts/init-devnet.sh",
    "devnet:start": "docker start midnight-devnet || docker run -d --name midnight-devnet -p 6300:6300 midnightnetwork/proof-server -- 'midnight-proof-server --network testnet'",
    "devnet:stop": "docker stop midnight-devnet && docker rm midnight-devnet",
    "devnet:logs": "docker logs -f midnight-devnet",
    "devnet:verify": "node scripts/verify-devnet.js",
    "compile": "npm run compile --workspace=../contracts/midnight",
    "build": "npm run build --workspace=../contracts/midnight",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "deploy": "tsx scripts/deploy-audit-verifier.ts",
    "deploy:force": "tsx scripts/deploy-audit-verifier.ts --force",
    "integration:test": "vitest run test/integration",
    "integration:test:watch": "vitest watch test/integration",
    "clean": "rm -rf build dist node_modules/.cache"
  },
  "dependencies": {
    "@midnight-ntwrk/compact-runtime": "^0.9.0",
    "@midnight-ntwrk/dapp-connector-api": "^3.0.0",
    "@midnight-ntwrk/ledger": "^4.0.0",
    "@midnight-ntwrk/midnight-js-contracts": "^2.0.2",
    "@midnight-ntwrk/midnight-js-fetch-zk-config-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-indexer-public-data-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-level-private-state-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-network-id": "^2.0.2",
    "@midnight-ntwrk/midnight-js-node-zk-config-provider": "^2.0.2",
    "@midnight-ntwrk/midnight-js-types": "^2.0.2",
    "@midnight-ntwrk/midnight-js-utils": "^2.0.2",
    "@midnight-ntwrk/onchain-runtime": "^0.3.0",
    "@midnight-ntwrk/wallet": "^5.0.0",
    "@midnight-ntwrk/wallet-api": "^5.0.0",
    "@midnight-ntwrk/wallet-sdk-address-format": "^2.0.0",
    "@midnight-ntwrk/zswap": "^4.0.0",
    "dotenv": "^17.2.3",
    "fp-ts": "^2.16.11"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "midnight-network",
    "zero-knowledge",
    "zk-proofs",
    "compact",
    "blockchain"
  ]
}

